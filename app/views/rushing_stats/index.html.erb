<table class="table table-striped table-dark table-hover">
  <thead>
    <tr>
      <th scope="col"><%= sortable "player" %></th>
      <th scope="col"><%= sortable "team" %></th>
      <th scope="col"><%= sortable "position" %></th>
      <th scope="col"><%= sortable "attempts", "Att" %></th>
      <th scope="col"><%= sortable "attempts_per_game", "Att/G" %></th>
      <th scope="col"><%= sortable "yds" %></th>
      <th scope="col"><%= sortable "avg" %></th>
      <th scope="col"><%= sortable "yds_per_game", "Yds/G" %></th>
      <th scope="col"><%= sortable "td", "TD" %></th>
      <th scope="col"><%= sortable "lng" %></th>
      <th scope="col"><%= sortable "first_downs", "1st" %></th>
      <th scope="col"><%= sortable "first_down_percentage", "1st%" %></th>
      <th scope="col"><%= sortable "rushes_gt_twenty_yds", "20+" %></th>
      <th scope="col"><%= sortable "rushes_gt_forty_yds", "40+" %></th>
      <th scope="col"><%= sortable "fumbles", "FUM" %></th>
    </tr>
  </thead>
  <tbody>
  <% @rushing_stats.each do |stat| %>
    <tr>
        <td>
            <%= stat.player %>
        </td>
        <td>
            <%= stat.team %>
        </td>
        <td>
            <%= stat.position %>
        </td>
        <td>
            <%= stat.attempts %>
        </td>
        <td>
            <%= stat.attempts_per_game %>
        </td>
        <td>
            <%= stat.yds %>
        </td>
        <td>
            <%= stat.avg %>
        </td>
        <td>
            <%= stat.yds_per_game %>
        </td>
        <td>
            <%= stat.td %>
        </td>
        <td>
            <%= stat.lng %>
        </td>
        <td>
            <%= stat.first_downs %>
        </td>
        <td>
            <%= stat.first_down_percentage %>
        </td>
        <td>
            <%= stat.rushes_gt_twenty_yds %>
        </td>
        <td>
            <%= stat.rushes_gt_forty_yds %>
        </td>
        <td>
            <%= stat.fumbles %>
        </td>
    </tr>
  <% end %>
  </tbody>
</table>